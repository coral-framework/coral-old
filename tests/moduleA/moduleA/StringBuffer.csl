/*
	Proof-of-concept native class that wraps std::stringstream.
 */
native class StringBuffer ( std::stringstream <sstream> )
{
	// Appends a string.
	void addString( in string str );

	// Appends a double.
	void addNumber( in double num );

	/*
		Returns the resulting string so far.
		If the buffer is empty, this method will raise a TestException.
	 */
	void getResult( out string result ) raises TestException;

	// Resets the buffer to an empty string.
	void clear();
};
