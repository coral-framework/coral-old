/*
	Describes an interface (either a facet or receptacle) as part of a component.
 */
interface IPort extends IMember
{
	// The interface type.
	readonly IInterface type;

	/*
		True if the port is a facet (i.e. if it provides a service);
		false if the port is a receptacle (i.e. it receives a service).
	 */
	readonly bool isFacet;
};
