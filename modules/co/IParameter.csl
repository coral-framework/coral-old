/*
	Describes a \ref co::IMethod "method" parameter.
 */
interface IParameter
{
	// The parameter's name.
	readonly attribute string name;

	// The parameter's type.
	readonly attribute IType type;

	// Whether the paremeter is used for input.
	readonly attribute bool isIn;

	// Whether the parameter is used for output.
	readonly attribute bool isOut;
};
