/*
	Interface responsible for handling requests to a proxy interface.
 */
interface DynamicProxyHandler
{
	// Registers a new proxy interface and returns a 'cookie' for it.
	int32 registerProxyInterface( in Interface proxy );

	// Retrieves a proxy interface's name given its cookie.
	string getProxyInterfaceName( in int32 cookie );

	// Handles a request for retrieving an attribute value.
	void handleGetAttribute( in int32 cookie, in AttributeInfo ai, out any value );

	// Handles a request for setting an attribute value.
	void handleSetAttribute( in int32 cookie, in AttributeInfo ai, in any value );

	// Handles a call to one of the proxy interface's methods.
	void handleMethodInvocation( in int32 cookie, in MethodInfo mi, in any[] args, out any returnValue );
};
