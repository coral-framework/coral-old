!!! 5 iso-8859-1
%html{:lang => "en"}
	%head
		%meta{ 'http-equiv' => 'Content-Type', :content => 'text/html' }
		%title
			- if @item[:layout] == "standalone"
				= @item[:title]
			- else
				Coral #{@config[:version]}: #{@item[:title]}
		%link{:href => "/#{@config[:version]}/style/screen.css", :media => "screen, projection", :rel => "stylesheet", :type => "text/css"}
		%link{:href => "/#{@config[:version]}/style/print.css", :media => "print", :rel => "stylesheet", :type => "text/css"}
		<!--[if lt IE 8]>
		%link{:href => "/#{@config[:version]}/style/ie.css", :media => "screen, projection", :rel => "stylesheet", :type => "text/css"}
		<![endif]-->
		%script(language="javascript" type="text/javascript" src="/#{@config[:version]}/js/column.js")
		%script(language="javascript" type="text/javascript" src="/#{@config[:version]}/js/jquery.js")
		%script(language="javascript" type="text/javascript" src="/#{@config[:version]}/js/addons.js")
	=yield